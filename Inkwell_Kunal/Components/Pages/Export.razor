@page "/export"
@using Inkwell_Kunal.Data
@inject IExportService ExportService
@inject IJSRuntime JS

<h3>Export Journals</h3>

<div class="card p-3" style="max-width:48rem;">
    <div class="row">
        <div class="col-md-4">
            <label class="form-label">Start date</label>
            <input type="date" class="form-control" @bind="StartDate" />
        </div>
        <div class="col-md-4">
            <label class="form-label">End date</label>
            <input type="date" class="form-control" @bind="EndDate" />
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button class="btn btn-primary" @onclick="DoExport" disabled="@(IsWorking)">Export PDF</button>
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Status)) { <div class="mt-3 text-muted">@Status</div> }
</div>

@code {
    private DateTime StartDate = DateTime.UtcNow.Date.AddDays(-7);
    private DateTime EndDate = DateTime.UtcNow.Date;
    private bool IsWorking = false;
    private string? Status;

    private async Task DoExport()
    {
        try
        {
            IsWorking = true;
            Status = "Preparing PDF...";
            var bytes = await ExportService.GeneratePdfAsync(StartDate, EndDate);
            var fileName = $"journal_{StartDate:yyyyMMdd}_{EndDate:yyyyMMdd}.pdf";
            var base64 = Convert.ToBase64String(bytes);
            await JS.InvokeVoidAsync("saveFileFromBytes", fileName, base64);
            Status = "PDF exported successfully.";
        }
        catch (Exception ex)
        {
            Status = "Export failed: " + ex.Message;
        }
        finally
        {
            IsWorking = false;
        }
    }
}
