@page "/entries"
@using Inkwell_Kunal.Data
@using Inkwell_Kunal.Data.Models
@inject IJournalService JournalService
@inject NavigationManager NavManager

<h3>Entries</h3>

<div class="d-flex align-items-center mb-2">
    <input class="form-control me-2" placeholder="Search title or content" @bind="SearchQuery" style="max-width:18rem;" />
    <input type="date" class="form-control me-2" @bind="FilterStart" />
    <input type="date" class="form-control me-2" @bind="FilterEnd" />
    <select class="form-select me-2" @bind="SelectedMood" style="width:10rem;">
        <option value="">Any mood</option>
        @foreach (var m in AllMoods) { <option value="@m">@m</option>; }
    </select>
    <input class="form-control me-2" placeholder="Tags (comma separated)" @bind="SelectedTagsText" style="max-width:14rem;" />
    <button class="btn btn-primary me-2" @onclick="ApplyFilters">Filter</button>
    <button class="btn btn-light me-2" @onclick="ClearFilters">Clear</button>
    <div class="ms-auto">Total: @TotalCount</div>
</div>

@if (Entries == null)
{
    <p>Loading...</p>
}
else if (Entries.Length == 0)
{
    <p>No entries.</p>
}
else
{
    <ul class="list-group">
        @foreach (var e in Entries)
        {
            <li class="list-group-item d-flex justify-content-between align-items-start">
                <div>
                    <div class="fw-bold">@e.Title</div>
                    <div class="text-muted">@e.CreatedAt.ToString("u") â€” Primary: @e.PrimaryMood</div>
                    <div>@(string.IsNullOrEmpty(e.Content) ? "(no content)" : e.Content)</div>
                </div>
                <div class="text-end">
                    <button class="btn btn-sm btn-outline-primary" @onclick="() => OpenEntry(e.CreatedAt)">Open</button>
                </div>
            </li>
        }
    </ul>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <button class="btn btn-light" @onclick="PrevPage" disabled="@(PageIndex==0)">Prev</button>
        <div>Page @PageIndexDisplay of @TotalPages</div>
        <button class="btn btn-light" @onclick="NextPage" disabled="@(PageIndex >= TotalPages-1)">Next</button>
    </div>
}

@code {
    private JournalEntry[]? Entries;
    private int PageIndex = 0;
    private int PageSize = 10;
    private int TotalCount = 0;

    private readonly string[] Positive = new[] { "Happy", "Excited", "Relaxed", "Grateful", "Confident" };
    private readonly string[] Neutral = new[] { "Calm", "Thoughtful", "Curious", "Nostalgic", "Bored" };
    private readonly string[] Negative = new[] { "Sad", "Angry", "Stressed", "Lonely", "Anxious" };
    private string[] AllMoods => Positive.Concat(Neutral).Concat(Negative).ToArray();

    // Filters
    private string? SearchQuery;
    private DateTime? FilterStart;
    private DateTime? FilterEnd;
    private string SelectedMood = string.Empty;
    private string SelectedTagsText = string.Empty;

    private int TotalPages => (int)Math.Ceiling(TotalCount / (double)PageSize);
    private string PageIndexDisplay => (PageIndex + 1).ToString();

    protected override async Task OnInitializedAsync()
    {
        await LoadPage();
    }

    private async Task LoadPage()
    {
        string[]? moods = string.IsNullOrWhiteSpace(SelectedMood) ? null : new[] { SelectedMood };
        string[]? tags = string.IsNullOrWhiteSpace(SelectedTagsText) ? null : SelectedTagsText.Split(',', StringSplitOptions.RemoveEmptyEntries).Select(t => t.Trim()).ToArray();
        var result = await JournalService.SearchEntriesAsync(SearchQuery, FilterStart, FilterEnd.HasValue ? FilterEnd.Value.AddDays(1) : (DateTime?)null, moods, tags, PageIndex, PageSize);
        Entries = result.Entries;
        TotalCount = result.TotalCount;
    }

    private async Task PrevPage()
    {
        if (PageIndex == 0) return;
        PageIndex--;
        await LoadPage();
    }

    private async Task NextPage()
    {
        if (PageIndex >= TotalPages - 1) return;
        PageIndex++;
        await LoadPage();
    }

    private async Task ApplyFilters()
    {
        PageIndex = 0;
        await LoadPage();
    }

    private async Task ClearFilters()
    {
        SearchQuery = null;
        FilterStart = null;
        FilterEnd = null;
        SelectedMood = string.Empty;
        SelectedTagsText = string.Empty;
        PageIndex = 0;
        await LoadPage();
    }

    private void OpenEntry(DateTime createdAt)
    {
        NavManager.NavigateTo($"/journal?date={createdAt:yyyy-MM-dd}");
    }

    private async Task OnPageSizeChanged(ChangeEventArgs e)
    {
        if (int.TryParse(e?.Value?.ToString(), out var s)) PageSize = s;
        PageIndex = 0;
        await LoadPage();
    }
}
