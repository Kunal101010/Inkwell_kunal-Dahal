<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Inkwell_Kunal</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-graph-up-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="journal">
                <span class="bi bi-journal-text-nav-menu" aria-hidden="true"></span> Journal
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="entries">
                <span class="bi bi-list-columns-nav-menu" aria-hidden="true"></span> Entries
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calendar">
                <span class="bi bi-calendar-event-nav-menu" aria-hidden="true"></span> Calendar
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="export">
                <span class="bi bi-file-earmark-arrow-down-nav-menu" aria-hidden="true"></span> Export
            </NavLink>
        </div>
        <div class="nav-item px-3">
            @* Theme selector *@
            @inject Inkwell_Kunal.Services.ThemeService ThemeService

            <label class="form-label">Theme</label>
            <select class="form-select" @onchange="OnThemeChanged">
                <option value="light">Light</option>
                <option value="dark">Dark</option>
                
            </select>
        </div>
    </nav>
</div>

@code {
    private async Task OnThemeChanged(ChangeEventArgs e)
    {
        var theme = e?.Value?.ToString() ?? "light";
        await ThemeService.SetThemeAsync(theme);
    }

    private async Task OnAccentChanged(ChangeEventArgs e)
    {
        var hex = e?.Value?.ToString() ?? string.Empty;
        if (!string.IsNullOrEmpty(hex)) await ThemeService.SetAccentAsync(hex);
    }
}
