@using Microsoft.AspNetCore.Components.Routing
@using MudBlazor
@using Inkwell_Kunal.Services
@inject AuthenticationService authService

<div class="nav-sidebar">
    <!-- App Header -->
    <div class="nav-header">
        <div class="app-logo">
            <MudIcon Icon="@Icons.Material.Filled.Edit" IconSize="Size.ExtraSmall" Color="Color.Primary" />
            <span class="app-title">Inkwell</span>
        </div>
    </div>

    <!-- Navigation Menu -->
    <MudNavMenu Class="nav-menu" Color="Color.Primary" Bordered="false" Rounded="false">
        <!-- Dashboard -->
        <MudNavLink Href="/dashboard" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Primary" IconSize="Size.ExtraSmall">
            Dashboard
        </MudNavLink>

        <!-- Write Journal -->
        <MudNavLink Href="/calendar" Icon="@Icons.Material.Filled.Edit" IconColor="Color.Secondary" IconSize="Size.ExtraSmall">
            Write Journal
        </MudNavLink>

        <!-- Calendar View -->
        <MudNavLink Href="/calendar-view" Icon="@Icons.Material.Filled.CalendarMonth" IconColor="Color.Tertiary" IconSize="Size.ExtraSmall">
            Calendar View
        </MudNavLink>

        <!-- Journal Entries -->
        <MudNavLink Href="/entries" Icon="@Icons.Material.Filled.List" IconColor="Color.Info" IconSize="Size.ExtraSmall">
            Journal Entries
        </MudNavLink>

        <!-- Search & Filter -->
        <MudNavLink Href="/search" Icon="@Icons.Material.Filled.Search" IconColor="Color.Warning" IconSize="Size.ExtraSmall">
            Search & Filter
        </MudNavLink>

        <!-- Analytics Section -->
        <MudNavGroup Title="Analytics" Icon="@Icons.Material.Filled.Analytics" Expanded="false" IconSize="Size.ExtraSmall">
            <MudNavLink Href="/mood-analytics" Icon="@Icons.Material.Filled.Mood" IconColor="Color.Success" IconSize="Size.ExtraSmall">
                Mood Analytics
            </MudNavLink>
            <MudNavLink Href="/streak-tracking" Icon="@Icons.Material.Filled.Timeline" IconColor="Color.Error" IconSize="Size.ExtraSmall">
                Streak Tracking
            </MudNavLink>
        </MudNavGroup>

        <!-- Management Section -->
        <MudNavGroup Title="Management" Icon="@Icons.Material.Filled.Settings" Expanded="false" IconSize="Size.ExtraSmall">
            <MudNavLink Href="/tags" Icon="@Icons.Material.Filled.Tag" IconColor="Color.Secondary" IconSize="Size.ExtraSmall">
                Tags Management
            </MudNavLink>
            <MudNavLink Href="/export" Icon="@Icons.Material.Filled.Download" IconColor="Color.Info" IconSize="Size.ExtraSmall">
                Export Journals
            </MudNavLink>
        </MudNavGroup>

        <!-- Settings -->
        <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Default" IconSize="Size.ExtraSmall">
            Settings
        </MudNavLink>
    </MudNavMenu>

    <!-- User Section -->
    <div class="nav-footer">
        <MudDivider />
        <div class="user-info">
            <MudAvatar Size="Size.Small" Color="Color.Primary">
                <MudIcon Icon="@Icons.Material.Filled.Person" IconSize="Size.Extra.Small" />
            </MudAvatar>
            <span class="user-name">@authService.CurrentUser?.Username</span>
        </div>
    </div>
</div>

<style>
    .nav-sidebar {
        width: 260px;
        height: 100vh;
        background-color: var(--mud-palette-surface);
        border-right: 1px solid var(--mud-palette-divider);
        display: flex;
        flex-direction: column;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        overflow-y: auto;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.08);
    }

    .nav-header {
        padding: 18px 16px;
        border-bottom: 1px solid var(--mud-palette-divider);
        text-align: center;
    }

    .app-logo {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
    }

    .app-title {
        font-size: 20px;
        font-weight: 700;
        color: var(--mud-palette-primary);
        margin: 0;
        letter-spacing: 0.5px;
    }

    .nav-menu {
        flex: 1;
        padding: 8px 0;
    }

    .nav-menu .mud-nav-link {
        margin: 3px 10px;
        border-radius: 8px;
        padding: 10px 14px;
        font-weight: 500;
        font-size: 0.95rem;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .nav-menu .mud-nav-link:hover {
        background-color: var(--mud-palette-action-hover);
        transform: translateX(3px);
    }

    .nav-menu .mud-nav-link.mud-nav-link-active {
        background-color: var(--mud-palette-primary);
        color: var(--mud-palette-primary-contrast-text);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

    .nav-menu .mud-nav-link.mud-nav-link-active .mud-icon {
        color: var(--mud-palette-primary-contrast-text) !important;
    }

    .nav-menu .mud-nav-group {
        margin: 4px 0;
    }

    .nav-menu .mud-nav-group .mud-nav-group-header {
        padding: 8px 14px 8px 16px;
        font-weight: 700;
        color: var(--mud-palette-text-secondary);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.6px;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    .nav-menu .mud-nav-group .mud-nav-group-header:hover {
        background-color: var(--mud-palette-action-hover);
    }

    .nav-menu .mud-nav-group .mud-nav-link {
        padding-left: 28px;
        font-size: 0.9rem;
    }

    .nav-footer {
        padding: 16px;
        border-top: 1px solid var(--mud-palette-divider);
        background-color: var(--mud-palette-background);
    }

    .user-info {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 8px;
        border-radius: 8px;
        background-color: var(--mud-palette-surface);
    }

    .user-name {
        font-weight: 500;
        color: var(--mud-palette-text-primary);
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    @@media (max-width: 768px) {
        .nav-sidebar {
            width: 240px;
            transform: translateX(-100%);
        }
        .nav-sidebar.open {
            transform: translateX(0);
        }
    }

    [data-mud-theme="dark"] .nav-sidebar {
        background-color: var(--mud-palette-background-grey);
        border-right-color: var(--mud-palette-divider);
    }
</style>