@page "/entries"
@inject JournalService journalService
@inject AuthenticationService authService
@inject NavigationManager Navigation
@using Inkwell_Kunal.Services
@using Inkwell_Kunal.Data
@inject IJSRuntime JSRuntime

<PageTitle>Journal Entries - Inkwell Journal</PageTitle>

<div class="entries-page">
    <div class="page-header">
        <h3>Journal Entries</h3>
        <p class="page-subtitle">View, search, and manage all your journal entries</p>
    </div>

    <div class="entries-controls">
        <input type="text" class="form-control search-input" placeholder="Search entries by title or content..." @bind="searchTerm" @bind:event="oninput" />
        <button class="btn btn-primary" @onclick="CreateNewEntry">Create New Entry</button>
    </div>

    @if (filteredEntries.Any())
    {
        <div class="entries-info">
            <span>Showing @filteredEntries.Count @(filteredEntries.Count == 1 ? "entry" : "entries")</span>
        </div>

        <div class="entries-table-wrapper">
            <table class="table table-hover entries-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Title</th>
                        <th>Mood</th>
                        <th>Preview</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in filteredEntries)
                    {
                        <tr>
                            <td>
                                <span class="date-badge">@entry.Date.ToShortDateString()</span>
                            </td>
                            <td>
                                <span class="entry-title">@(string.IsNullOrWhiteSpace(entry.Title) ? "Untitled" : entry.Title)</span>
                            </td>
                            <td>
                                <span class="mood-pill">@entry.PrimaryMood</span>
                            </td>
                            <td>
                                <span class="preview-text">@(entry.Content?.Length > 50 ? entry.Content.Substring(0, 50) + "..." : entry.Content)</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-link" @onclick="() => ViewEntry(entry)">View</button>
                                <button class="btn btn-sm btn-link" @onclick="() => EditEntry(entry)">Edit</button>
                                <button class="btn btn-sm btn-link text-danger" @onclick="() => DeleteEntry(entry)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <p>No entries found. Start writing your first journal entry!</p>
            <button class="btn btn-primary" @onclick="CreateNewEntry">Create Entry</button>
        </div>
    }
</div>

