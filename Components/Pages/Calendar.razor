@page "/calendar"
@page "/calendar/{date}"
@inject JournalService journalService
@inject AuthenticationService authService
@inject NavigationManager Navigation
@using Inkwell_Kunal.Services
@using Inkwell_Kunal.Data
@inject IJSRuntime JSRuntime

<PageTitle>Write Journal - Inkwell Journal</PageTitle>

<div class="journal-write-container">
    <div class="page-header">
        <h3>Write Journal Entry</h3>
        <p class="page-subtitle">@selectedDate.ToString("dddd, MMMM d, yyyy")</p>
    </div>

    <div class="journal-form-wrapper">
        <form @onsubmit="SaveEntry" @onsubmit:preventDefault="true">
            <!-- Quick Info Section -->
            <div class="info-section">
                <div class="info-row">
                    <div class="info-item">
                        <span class="info-label">Date</span>
                        <span class="info-value">@selectedDate.ToShortDateString()</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Time</span>
                        <span class="info-value">@DateTime.Now.ToString("h:mm tt")</span>
                    </div>
                </div>
            </div>

            <!-- Title and Mood Section -->
            <div class="section-card">
                <h5 class="section-title">Entry Details</h5>
                <div class="form-row">
                    <div class="form-group col-md-7">
                        <label class="form-label">Title <span class="optional">(Optional)</span></label>
                        <input type="text" class="form-control" @bind="title" placeholder="Give your entry a meaningful title..." />
                    </div>
                    <div class="form-group col-md-5">
                        <label class="form-label">Primary Mood <span class="required">*</span></label>
                        <select class="form-select" @bind="primaryMood" required>
                            <option value="">Select your mood</option>
                            @foreach (var mood in JournalService.AvailableMoods)
                            {
                                <option value="@mood">@mood</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <!-- Content Section -->
            <div class="section-card">
                <h5 class="section-title">Your Thoughts</h5>
                <label class="form-label">Journal Entry</label>
                <div class="editor-wrapper">
                    <div class="editor-toolbar">
                        <div class="toolbar-group">
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("bold"))" title="Bold">
                                <strong>B</strong>
                            </button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("italic"))" title="Italic">
                                <em>I</em>
                            </button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("underline"))" title="Underline">
                                <u>U</u>
                            </button>
                        </div>
                        <div class="toolbar-divider"></div>
                        <div class="toolbar-group">
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("h1"))" title="Heading 1">H1</button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("h2"))" title="Heading 2">H2</button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("h3"))" title="Heading 3">H3</button>
                        </div>
                        <div class="toolbar-divider"></div>
                        <div class="toolbar-group">
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("ul"))" title="Bullet List">‚â°</button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("ol"))" title="Numbered List">1.</button>
                            <button type="button" class="toolbar-btn" @onclick="@(() => ApplyFormat("blockquote"))" title="Quote">‚ùù</button>
                        </div>
                        <div class="toolbar-divider"></div>
                        <button type="button" class="toolbar-btn" @onclick="InsertLink" title="Link">üîó</button>
                    </div>
                    <textarea class="journal-textarea" @bind="content" placeholder="Write your thoughts, feelings, and reflections here..."></textarea>
                    <div class="editor-footer">
                        <small class="form-hint">üí° Tip: Use markdown formatting. **bold** *italic* # Heading</small>
                        <span class="word-count">@content.Split(new[] { ' ', '\t', '\n', '\r' }, StringSplitOptions.RemoveEmptyEntries).Length words</span>
                    </div>
                </div>
            </div>

            <!-- Mood and Tags Section -->
            <div class="section-card">
                <h5 class="section-title">Additional Moods & Tags</h5>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label class="form-label">Secondary Mood 1</label>
                        <select class="form-select" @bind="secondaryMood1">
                            <option value="">Optional</option>
                            @foreach (var mood in JournalService.AvailableMoods)
                            {
                                <option value="@mood">@mood</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Secondary Mood 2</label>
                        <select class="form-select" @bind="secondaryMood2">
                            <option value="">Optional</option>
                            @foreach (var mood in JournalService.AvailableMoods)
                            {
                                <option value="@mood">@mood</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-md-4">
                        <label class="form-label">Tags</label>
                        <input type="text" class="form-control" @bind="tags" placeholder="Work, Health, Family..." list="suggestedTags" />
                        <datalist id="suggestedTags">
                            @foreach (var suggestedTag in JournalService.SuggestedTags)
                            {
                                <option value="@suggestedTag" />
                            }
                        </datalist>
                    </div>
                </div>
                <small class="form-hint">Suggested tags: @string.Join(", ", JournalService.SuggestedTags.Take(6))</small>
            </div>

            <!-- Security Section -->
            <div class="section-card">
                <h5 class="section-title">Privacy</h5>
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="isLocked" @bind="isLocked" />
                    <label class="form-check-label" for="isLocked">Password protect this entry</label>
                </div>
                @if (isLocked)
                {
                    <div class="form-group mt-3">
                        <label class="form-label">Lock Password</label>
                        <input type="password" class="form-control" @bind="lockPassword" placeholder="Enter a secure password" />
                        <small class="form-hint">This entry will require a password to view</small>
                    </div>
                }
            </div>

            <!-- Action Section -->
            <div class="action-section">
                @if (!string.IsNullOrEmpty(message))
                {
                    <div class="alert alert-@messageType alert-dismissible fade show">
                        @message
                    </div>
                }
                <div class="button-group">
                    <button type="submit" class="btn btn-primary btn-save" disabled="@isSaving">
                        <span class="btn-icon">üíæ</span>
                        @(isSaving ? "Saving..." : "Save Entry")
                    </button>
                    <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>

