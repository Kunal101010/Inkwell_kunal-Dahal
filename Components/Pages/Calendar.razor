@code {
    [Parameter]
    public string? Date { get; set; }

    private DateTime selectedDate = DateTime.Today;
    private string title = "";
    private string content = "";
    private string primaryMood = "";
    private string secondaryMood1 = "";
    private string secondaryMood2 = "";
    private string tags = "";
    private string lockPassword = "";
    private bool isLocked = false;
    private bool isSaving = false;
    private string message = "";
    private string messageType = "info";
    private JournalEntry? existingEntry;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Parse date from URL parameter
            if (!string.IsNullOrEmpty(Date) && DateTime.TryParse(Date, out var parsedDate))
            {
                selectedDate = parsedDate.Date;
            }

            // Load existing entry if present
            var entries = await journalService.GetAllEntriesAsync();
            existingEntry = entries.FirstOrDefault(e => e.Date.Date == selectedDate.Date);
            
            if (existingEntry != null && !existingEntry.IsLocked)
            {
                title = existingEntry.Title ?? "";
                content = existingEntry.Content ?? "";
                primaryMood = existingEntry.PrimaryMood ?? "";
                secondaryMood1 = existingEntry.SecondaryMood1 ?? "";
                secondaryMood2 = existingEntry.SecondaryMood2 ?? "";
                tags = existingEntry.Tags ?? "";
                isLocked = existingEntry.IsLocked;
            }
        }
        catch (Exception ex)
        {
            message = $"Error loading entry: {ex.Message}";
            messageType = "warning";
        }
    }

    private void ApplyFormat(string format)
    {
        switch (format)
        {
            case "bold":
                content += " **bold text** ";
                break;
            case "italic":
                content += " *italic text* ";
                break;
            case "underline":
                content += " __underlined text__ ";
                break;
            case "h1":
                content += "\n# Heading 1\n";
                break;
            case "h2":
                content += "\n## Heading 2\n";
                break;
            case "h3":
                content += "\n### Heading 3\n";
                break;
            case "ul":
                content += "\n- List item 1\n- List item 2\n";
                break;
            case "ol":
                content += "\n1. List item 1\n2. List item 2\n";
                break;
            case "blockquote":
                content += "\n> Quote text here\n";
                break;
        }
    }

    private void InsertLink()
    {
        content += "[Link text](https://example.com)";
    }

    private async Task SaveEntry()
    {
        if (string.IsNullOrWhiteSpace(content))
        {
            message = "Please enter some content.";
            messageType = "danger";
            return;
        }

        if (string.IsNullOrWhiteSpace(primaryMood))
        {
            message = "Please select a primary mood.";
            messageType = "danger";
            return;
        }

        isSaving = true;
        try
        {
            await journalService.SaveEntryAsync(selectedDate, content, title, primaryMood, secondaryMood1, secondaryMood2, tags);
            
            if (isLocked && !string.IsNullOrWhiteSpace(lockPassword))
            {
                await journalService.LockEntryAsync(selectedDate, lockPassword);
            }

            message = "Entry saved successfully!";
            messageType = "success";
            await Task.Delay(2000);
            Navigation.NavigateTo("/calendar-view");
        }
        catch (Exception ex)
        {
            message = $"Error saving entry: {ex.Message}";
            messageType = "danger";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/calendar-view");
    }
}