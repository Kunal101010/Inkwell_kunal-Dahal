@page "/calendar-view"
@inject JournalService journalService
@inject AuthenticationService authService
@inject NavigationManager Navigation
@using Inkwell_Kunal.Services
@using Inkwell_Kunal.Data

<PageTitle>Calendar View - Inkwell Journal</PageTitle>

<div class="calendar-view-container">
    <div class="page-header">
        <h3>Calendar View</h3>
        <p class="page-subtitle">Browse and manage your journal entries by date</p>
    </div>

    <div class="calendar-wrapper">
        <div class="calendar-header">
            <button class="btn btn-outline-secondary" @onclick="PreviousMonth">&lt; Previous</button>
            <h4 class="calendar-title">@currentMonth.ToString("MMMM yyyy")</h4>
            <button class="btn btn-outline-secondary" @onclick="NextMonth">Next &gt;</button>
        </div>

        <div class="calendar-grid">
            <div class="day-header">Sunday</div>
            <div class="day-header">Monday</div>
            <div class="day-header">Tuesday</div>
            <div class="day-header">Wednesday</div>
            <div class="day-header">Thursday</div>
            <div class="day-header">Friday</div>
            <div class="day-header">Saturday</div>

            @for (int i = 0; i < startDayOfWeek; i++)
            {
                <div class="day empty"></div>
            }
            @for (int day = 1; day <= daysInMonth; day++)
            {
                var date = new DateTime(currentMonth.Year, currentMonth.Month, day);
                var hasEntry = entryDates.Contains(date.Date);
                var isToday = date.Date == DateTime.Today;
                <div class="day @(hasEntry ? "has-entry" : "") @(isToday ? "today" : "")" @onclick="() => SelectDate(date)" title="@date.ToShortDateString()">
                    @day
                </div>
            }
        </div>

        <div class="calendar-legend">
            <div class="legend-item">
                <div class="legend-box has-entry"></div>
                <span>Has Entry</span>
            </div>
            <div class="legend-item">
                <div class="legend-box today"></div>
                <span>Today</span>
            </div>
            <div class="legend-item">
                <div class="legend-box"></div>
                <span>No Entry</span>
            </div>
        </div>
    </div>

    @if (selectedDate.HasValue)
    {
        <div class="entry-preview-section">
            <h5>Entry for @selectedDate.Value.ToShortDateString()</h5>
            @if (selectedEntry != null)
            {
                <div class="preview-card">
                    <div class="preview-header">
                        <h6>@(string.IsNullOrWhiteSpace(selectedEntry.Title) ? "Untitled" : selectedEntry.Title)</h6>
                        <span class="mood-badge">@selectedEntry.PrimaryMood</span>
                    </div>
                    <p class="preview-content">@(selectedEntry.Content?.Length > 150 ? selectedEntry.Content.Substring(0, 150) + "..." : selectedEntry.Content)</p>
                    <div class="preview-actions">
                        <button class="btn btn-sm btn-primary" @onclick="EditEntry">Edit Entry</button>
                        <button class="btn btn-sm btn-outline-secondary" @onclick="ViewEntry">View Full</button>
                    </div>
                </div>
            }
            else
            {
                <div class="no-entry-card">
                    <p>No entry for this date.</p>
                    <button class="btn btn-success" @onclick="CreateEntry">Create New Entry</button>
                </div>
            }
        </div>
    }
</div>

<style>
    .calendar-view-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .page-header h3 {
        color: #2d3748;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .page-subtitle {
        color: #718096;
        font-size: 1rem;
        margin: 0;
    }

    .calendar-wrapper {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .calendar-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
