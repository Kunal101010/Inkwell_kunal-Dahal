        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .calendar-view-container {
            padding: 1rem;
        }

        .day-header {
            font-size: 0.75rem;
        }

        .calendar-legend {
            flex-direction: column;
            gap: 1rem;
        }
    }
</style>

@code {
    private DateTime currentMonth = DateTime.Today;
    private int daysInMonth;
    private int startDayOfWeek;
    private HashSet<DateTime> entryDates = new();
    private DateTime? selectedDate;
    private JournalEntry? selectedEntry;

    protected override async Task OnInitializedAsync()
    {
        await LoadCalendar();
    }

    private async Task LoadCalendar()
    {
        var firstDay = new DateTime(currentMonth.Year, currentMonth.Month, 1);
        daysInMonth = DateTime.DaysInMonth(currentMonth.Year, currentMonth.Month);
        startDayOfWeek = (int)firstDay.DayOfWeek;

        var entries = await journalService.GetAllEntriesAsync();
        entryDates = new HashSet<DateTime>(entries.Select(e => e.Date.Date));
    }

    private async Task PreviousMonth()
    {
        currentMonth = currentMonth.AddMonths(-1);
        await LoadCalendar();
    }

    private async Task NextMonth()
    {
        currentMonth = currentMonth.AddMonths(1);
        await LoadCalendar();
    }

    private async Task SelectDate(DateTime date)
    {
        selectedDate = date;
        var entries = await journalService.GetAllEntriesAsync();
        selectedEntry = entries.FirstOrDefault(e => e.Date.Date == date.Date);
    }

    private void EditEntry()
    {
        if (selectedDate.HasValue)
        {
            Navigation.NavigateTo($"/calendar?date={selectedDate.Value.ToString("yyyy-MM-dd")}");
        }
    }

    private void ViewEntry()
    {
        if (selectedEntry != null)
        {
            Navigation.NavigateTo($"/entry/{selectedEntry.Id}");
        }
    }

    private void CreateEntry()
    {
        if (selectedDate.HasValue)
        {
            Navigation.NavigateTo($"/calendar?date={selectedDate.Value.ToString("yyyy-MM-dd")}");
        }
    }
}