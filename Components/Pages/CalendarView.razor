        padding: 2rem;
    }

    .entry-preview-section h5 {
        color: #2d3748;
        margin-bottom: 1rem;
        font-size: 1.1rem;
    }

    .preview-card {
        background-color: #f7fafc;
        border-left: 4px solid #48bb78;
        padding: 1.5rem;
        border-radius: 8px;
        margin-bottom: 1rem;
    }

    .preview-header {
        display: flex;
