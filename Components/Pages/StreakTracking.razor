@page "/streak-tracking"
@inject JournalService journalService
@inject AuthenticationService authService
@using Inkwell_Kunal.Services
@using Inkwell_Kunal.Data

<PageTitle>Streak Tracking - Inkwell Journal</PageTitle>

<div class="streak-container">
    <h3>Streak Tracking</h3>
    <div class="streak-overview">
        <div class="streak-card primary">
            <div class="card-icon">üî•</div>
            <div class="card-content">
                <h5>Current Streak</h5>
                <p class="streak-number">@currentStreak days</p>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: @(Math.Min(currentStreak / 30.0 * 100, 100))%"></div>
                </div>
                <small>Keep it up!</small>
            </div>
        </div>
        <div class="streak-card secondary">
            <div class="card-icon">üèÜ</div>
            <div class="card-content">
                <h5>Longest Streak</h5>
                <p class="streak-number">@longestStreak days</p>
                <small>Your personal best</small>
            </div>
        </div>
        <div class="streak-card warning">
            <div class="card-icon">‚ö†Ô∏è</div>
            <div class="card-content">
                <h5>Missed Days (Last 30)</h5>
                <p class="streak-number">@missedDays.Count</p>
                <small>Days without entries</small>
            </div>
        </div>
    </div>
    <div class="streak-calendar">
        <h4>Streak Calendar (Last 30 Days)</h4>
        <div class="calendar-grid">
            @foreach (var day in last30Days)
            {
                var isActive = entryDates.Contains(day.Date);
                var isToday = day.Date == DateTime.Today;
                <div class="day @(isActive ? "active" : "") @(isToday ? "today" : "")" title="@day.ToShortDateString()">
                    @day.Day
                </div>
            }
        </div>
        <div class="legend">
            <div class="legend-item">
                <div class="day active"></div>
                <span>Entry Day</span>
            </div>
            <div class="legend-item">
                <div class="day today"></div>
                <span>Today</span>
            </div>
            <div class="legend-item">
                <div class="day"></div>
                <span>No Entry</span>
            </div>
        </div>
    </div>
</div>

