@code {
    private int currentStreak;
    private int longestStreak;
    private List<DateTime> missedDays = new();
    private HashSet<DateTime> entryDates = new();
    private List<DateTime> last30Days = new();

    protected override async Task OnInitializedAsync()
    {
        var entries = await journalService.GetAllEntriesAsync();
        var entryDateSet = new HashSet<DateTime>(entries.Select(e => e.Date.Date));
        entryDates = entryDateSet;

        var today = DateTime.Today;
        last30Days = Enumerable.Range(0, 30).Select(i => today.AddDays(-29 + i)).ToList();

        missedDays = last30Days.Where(d => !entryDateSet.Contains(d.Date)).ToList();

        // Calculate streaks
        var sortedDates = entryDateSet.OrderBy(d => d).ToList();
        if (sortedDates.Any())
        {
            var consecutive = 0;
            var checkDate = today;
            while (entryDateSet.Contains(checkDate))
            {
                consecutive++;
                checkDate = checkDate.AddDays(-1);
            }
            currentStreak = consecutive;

            longestStreak = 0;
            var current = 1;
            for (int i = 1; i < sortedDates.Count; i++)
            {
                if ((sortedDates[i] - sortedDates[i - 1]).Days == 1)
                {
                    current++;
                }
                else
                {
                    longestStreak = Math.Max(longestStreak, current);
                    current = 1;
                }
            }
            longestStreak = Math.Max(longestStreak, current);
        }
    }
}