@page "/tags"
@inject JournalService journalService
@inject AuthenticationService authService
@inject NavigationManager Navigation
@using Inkwell_Kunal.Services
@using Inkwell_Kunal.Data

<PageTitle>Tags Management - Inkwell Journal</PageTitle>

<div class="tags-container">
    <div class="tags-header">
        <h3>Tags Management</h3>
        <p class="subtitle">Organize and manage your journal tags</p>
    </div>

    <div class="tags-search">
        <input type="text" class="form-control" placeholder="Search tags..." @bind="searchTerm" @bind:event="oninput" />
    </div>

    @if (filteredTags.Any())
    {
        <div class="tags-stats">
            <div class="stat-card">
                <div class="stat-number">@uniqueTags.Count</div>
                <div class="stat-label">Total Tags</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@totalTagUsage</div>
                <div class="stat-label">Total Uses</div>
            </div>
            <div class="stat-card">
                <div class="stat-number">@(totalTagUsage > 0 ? (totalTagUsage / (double)uniqueTags.Count).ToString("F1") : "0")</div>
                <div class="stat-label">Avg Uses/Tag</div>
            </div>
        </div>

        <div class="tags-grid">
            @foreach (var tag in filteredTags)
            {
                var count = tagCounts.GetValueOrDefault(tag, 0);
                var percentage = (double)count / totalTagUsage * 100;
                <div class="tag-card">
                    <div class="tag-header">
                        <h5 class="tag-name">@tag</h5>
                        <span class="tag-badge">@count</span>
                    </div>
                    <div class="tag-bar-container">
                        <div class="tag-bar" style="width: @(percentage)%"></div>
                    </div>
                    <div class="tag-footer">
                        <small>@percentage.ToString("F1")% of all tags</small>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewEntriesByTag(tag)">
                            View Entries
                        </button>
                    </div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrWhiteSpace(searchTerm))
    {
        <div class="no-results">
            <p>No tags match your search.</p>
        </div>
    }
    else
    {
        <div class="no-results">
            <p>No tags found. Start journaling to create tags!</p>
        </div>
    }
</div>

<style>
