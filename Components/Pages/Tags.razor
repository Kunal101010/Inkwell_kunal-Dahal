        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .tag-footer small {
        color: #718096;
        font-size: 0.85rem;
    }

    .tag-footer .btn {
        font-size: 0.8rem;
        padding: 4px 10px;
    }

