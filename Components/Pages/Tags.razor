        max-width: 1000px;
        margin: 0 auto;
        padding: 2rem;
    }

    .tags-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .tags-header h3 {
        color: #2d3748;
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: #718096;
        font-size: 1rem;
        margin: 0;
    }

    .tags-search {
        margin-bottom: 2rem;
    }

    .tags-search .form-control {
        padding: 12px 16px;
        font-size: 1rem;
        border-radius: 8px;
        border: 2px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .tags-search .form-control:focus {
        border-color: #667eea;
