    }

    @@media (max-width: 768px) {
        .tags-grid {
            grid-template-columns: 1fr;
        }

        .tags-stats {
            grid-template-columns: 1fr;
        }
    }
</style>

@code {
    private List<string> uniqueTags = new();
    private List<string> filteredTags = new();
    private Dictionary<string, int> tagCounts = new();
    private string searchTerm = "";
    private int totalTagUsage = 0;

    protected override async Task OnInitializedAsync()
    {
        var entries = await journalService.GetAllEntriesAsync();
        var allTags = entries
            .Where(e => !string.IsNullOrEmpty(e.Tags))
            .SelectMany(e => e.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
            .Select(t => t.Trim())
            .Where(t => !string.IsNullOrEmpty(t))
            .ToList();

        tagCounts = allTags
            .GroupBy(t => t, StringComparer.OrdinalIgnoreCase)
            .ToDictionary(g => g.Key, g => g.Count(), StringComparer.OrdinalIgnoreCase);

        uniqueTags = tagCounts.Keys.OrderByDescending(t => tagCounts[t]).ToList();
        totalTagUsage = allTags.Count;
        filteredTags = uniqueTags;
    }

    private void FilterTags()
    {
        if (string.IsNullOrWhiteSpace(searchTerm))
        {
            filteredTags = uniqueTags;
        }
        else
        {
            filteredTags = uniqueTags
                .Where(t => t.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
    }

    private void ViewEntriesByTag(string tag)
    {
        Navigation.NavigateTo($"/search?tag={Uri.EscapeDataString(tag)}");
    }
}