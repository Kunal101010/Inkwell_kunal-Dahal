@page "/settings"
@inject ThemeService themeService
@inject AuthenticationService authService
@using Inkwell_Kunal.Services

<PageTitle>Settings - Inkwell Journal</PageTitle>

<h3 class="text-center my-5">‚öôÔ∏è Settings</h3>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Theme Settings -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üé® Theme Customization</h5>
                </div>
                <div class="card-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="darkModeSwitch"
                               checked="@themeService.IsDarkMode" @onchange="ToggleTheme" />
                        <label class="form-check-label" for="darkModeSwitch">
                            Dark Mode
                        </label>
                    </div>
                    <small class="text-muted">Toggle between light and dark themes</small>
                </div>
            </div>

            <!-- Security & Privacy -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üîí Security & Privacy</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Security settings.</p>
                    <div class="text-center">
                        <button class="btn btn-outline-primary" disabled>
                            Change Password
                        </button>
                        <button class="btn btn-outline-primary ms-2" disabled>
                            Two-Factor Authentication
                        </button>
                    </div>
                </div>
            </div>

            <!-- Account Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üë§ Account Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <strong>Username:</strong> @authService.CurrentUser?.Username
                        </div>
                        <div class="col-sm-6">
                            <strong>Member since:</strong> @authService.CurrentUser?.CreatedAt.ToString("MMMM yyyy")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Data Management -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">üíæ Data Management</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Export or delete your journal data.</p>
                    <div class="text-center">
                        <button class="btn btn-outline-success" @onclick="() => Navigation.NavigateTo('/export')">
                            Export Data
                        </button>
                        <button class="btn btn-outline-danger ms-2" disabled>
                            Delete Account
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Inject] NavigationManager Navigation { get; set; } = default!;

    private void ToggleTheme()
    {
        themeService.ToggleTheme();
    }
}